#!/usr/bin/env lua

local file = assert(io.popen('wpctl get-volume @DEFAULT_SINK@', 'r'))

local output = file:read '*l' ---@type string
local match = output:match '%d+%.%d+' ---@type string?

local volume = math.floor((tonumber(match) or 0) * 100)
local is_muted = output:sub(-7, -1) == '[MUTED]'

local icon
if is_muted then
    icon = 'notification-audio-volume-muted'
elseif volume < 30 then
    icon = 'notification-audio-volume-low'
elseif volume < 70 then
    icon = 'notification-audio-volume-medium'
else
    icon = 'notification-audio-volume-high'
end

-- stylua: ignore start
local command = {
    'notify-send',
    '--app-name', 'volume',
    '--urgency', 'low',
    '--icon', icon,
    '--hint', 'string:x-dunst-stack-tag:volume_indicator',
    '--hint', 'int:value:' .. volume,
    volume .. '%', -- summary
}
-- stylua: ignore end

os.execute(table.concat(command, ' '))
