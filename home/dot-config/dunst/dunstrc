# See dunst(5) for all configuration options

[global]
  monitor = 0
  follow = none
  # Sort messages by urgency
  sort = yes
  idle_threshold = 2m

  notification_limit = 6
  indicate_hidden = yes

  # Geometry
  width = (50, 400)
  height = (50, 300)
  origin = top-right
  offset = (10, 10)
  scale = 0
  corner_radius = 12

  # Progress bar
  progress_bar = true
  progress_bar_height = 10
  progress_bar_frame_width = 1
  progress_bar_min_width = 150
  progress_bar_max_width = 300
  progress_bar_corner_radius = 3

  # Spacing / Frame (Border)
  gap_size = 5
  frame_width = 2
  frame_color = "#4889AD"
  separator_height = 3
  separator_color = frame

  # Text
  font = Source Sans Pro
  line_height = 0
  markup = full
  format = "<span size='110%'><b>%s</b></span> <span size='90%' color='#4889AD'>(%a)</span>\n%b"
  alignment = left
  vertical_alignment = center
  show_age_threshold = -1
  ellipsize = middle
  ignore_newline = no
  stack_duplicates = true
  hide_duplicate_count = true
  show_indicators = yes

  # Icons
  icon_corner_radius = 0
  text_icon_padding = 0
  enable_recursive_icon_lookup = true
  icon_theme = Papirus-Dark, Papirus, Adwaita
  icon_position = left
  min_icon_size = 48
  max_icon_size = 128

  # History
  sticky_history = no
  history_length = 20

  # Misc/Advanced
  dmenu = /usr/bin/walker --dmenu --placeholder Notification

  # mouse
  mouse_left_click = close_current
  mouse_middle_click = close_all
  mouse_right_click = do_action, close_current

  # https://en.m.wikibooks.org/wiki/Regular_Expressions/POSIX-Extended_Regular_Expressions
  enable_posix_regex = true


[experimental]
  per_monitor_dpi = false

[urgency_low]
  background = "#19242AD0"
  foreground = "#B0CEDE"
  highlight = "#B0CEDE"
  timeout = 10

[urgency_normal]
  background = "#19242AD0"
  foreground = "#B0CEDE"
  frame_color = "#4889AD"
  highlight = "#B0CEDE"
  timeout = 10

[urgency_critical]
  background = "#19242AD0"
  foreground = "#B0CEDE"
  frame_color = "#C84442"
  highlight = "#C84442"
  timeout = 20


# Rules
[testing]
  appname = notification-test-script
  history_ignore = yes
  timeout = 5

[volume]
  stack_tag = volume_indicator
  set_stack_tag = volume_indicator
  history_ignore = true
  icon_position = top
  alignment = center
  format = "<span size='120%'><b>%s</b></span>"
  timeout = 3s

[battery]
  stack_tag = battery_state
  set_stack_tag = battery_state
  history_ignore = true
  format = "<span size='120%'><b>%s</b></span>"

[battery-critical]
  msg_urgency = critical
  stack_tag = battery_state
  # The notification never timeouts
  timeout = 0

# vim: ft=ini
